@model MVC_EF1.Models.StudentDBModel

@{
    ViewData["Title"] = "Добавление студента";
}

<div style="margin-top: 20px;">
    @using (Html.BeginForm("Add", "Student", Model, FormMethod.Post))
    {
        <div>
            <div>@Html.DisplayNameFor(m => m.Id)</div>
            <div>@Html.EditorFor(m => m.Id)</div>
            <div>@Html.ValidationMessageFor(m => m.Id)</div>
        </div>
        <div>
            <div>@Html.DisplayNameFor(m => m.Name)</div>
            <div>@Html.EditorFor(m => m.Name)</div>
            <div>@Html.ValidationMessageFor(m => m.Name)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.Surname)</div>
            <div>@Html.EditorFor(m => m.Surname)</div>
            <div>@Html.ValidationMessageFor(m => m.Surname)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.Age)</div>
            <div>@Html.EditorFor(m => m.Age)</div>
            <div>@Html.ValidationMessageFor(m => m.Age)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.GroupId)</div>
            <div>@Html.EditorFor(m => m.GroupId)</div>
            <div>@Html.ValidationMessageFor(m => m.GroupId)</div>
        </div>

        <div>
            <div>@Html.DisplayNameFor(m => m.Status)</div>
            <div>@Html.EditorFor(m => m.Status)</div>
            <div>@Html.ValidationMessageFor(m => m.Status)</div>
        </div>
        <div style="margin-top: 10px;">
            <button class="btn btn-primary" type="submit">Сохранить</button>
        </div>
    }
</div>